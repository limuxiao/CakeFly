.view-live{
  width: 100%; height: 500rpx; background-color: #fff;
}

.view-half{
  width: 100%; height: 50%; display: flex; overflow: hidden; border-bottom: 1rpx solid #eee;
}

.view-live-active{
  height: 100%; flex: 2; border-right: 1rpx solid #eee; position: relative; margin: 0; padding: 0;
}

.view-live-normal{
  height: 100%; flex: 1; border-right: 1rpx solid #eee; position: relative; margin: 0; padding: 0;
}

.view-mask{
  width: 100%; position: absolute; bottom: 0;
}

.view-norma-mask{
  width: 100%; height: 100%; position: absolute; bottom: 0;
}

.view-active-title{
  font-size: 24rpx; color: #fff; margin: 10rpx; 
}

.view-active-desc{
   font-size: 20rpx; color: #eee; margin: 0 10rpx 10rpx 14rpx; text-overflow: ellipsis;               -webkit-line-clamp: 2;
}

.video-active{
  width: 100%; height: 100%;
}

.img-live{
  width: 90rpx; height: 30rpx;
}

.img-normal-live{
  width: 90rpx; height: 30rpx; position: absolute; bottom: 0;
}

.img-normal{
  width: 100%; height: 100%;
}

.view-normal-title{
  font-size: 24rpx; color: #fff; margin-left: 10rpx;  
}

.view-normal-desc{
  font-size: 20rpx; color: #eee; 
  margin: 0 0 40rpx 14rpx; text-overflow: ellipsis;
  -webkit-line-clamp: 1;
}

.view-test{
  width: 100%; position: absolute; bottom: 0;
  
}