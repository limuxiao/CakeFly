.view-root{
  width: 100%; height: auto; overflow: auto; padding-top: 24rpx; padding-bottom: 24rpx;
}

.view-item{
  width: 50%; height: 180rpx; float: left; background-color: #fff; 
  border: 1rpx solid #eee; margin: -1rpx;
}

.view-content{
  margin: 0 20rpx; height: 100%;
}

.view-desc{
  font-size: 24rpx; color: #999; 
}

.view-left{
  width: 50%; height: 100%; float:left;
}

.view-right-full{
  width: 50%; height: 100%; float: right; position: relative; display: flex;
  justify-content: center; bottom: 0; align-items: center
}

.view-title{
  margin-top: 10rpx; margin-left: 0; font-size: 30rpx; 
}

.img-left{
  width: 100%; height: 100%;
}

.img-right{
  width: 80%; height: 80%;  
}

.view-text{
  width: 100%; height: 40%; 
}

.view-img-bottom{
  width: 100%; height: 60%; 
}

.view-has-tag{
  width: 100%; display: flex;
}

.view-tag{
  font-size: 18rpx; display: flex; align-items: center; margin-left: 10rpx;
}

.text-tag{
  border: 1rpx solid #ff0ff0; margin: 0; padding: 0 10rpx; border-radius: 4rpx; color: #f80f80;
}